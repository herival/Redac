{% extends 'base.html.twig' %}

{% block title %}Menu inter{% endblock %}

{% block body %}
<div class="row d-flex justify-content-center">
  <div class="col-md-3">

    <h1 class="text-center">Menu</h1>

    <p class="d-grid gap-2 px-2">
      <a class="btn btn-success" data-bs-toggle="collapse" href="#gestiontech" role="button" aria-expanded="false"
        aria-controls="collapseExample">
        Gestion techs
      </a>
    </p>
    <div class="collapse px-2" id="gestiontech">
      <div class="card card-body">
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_compte')}}" class="btn btn-primary">Liste des techniciens</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_register')}}" class="btn btn-primary">Nouveau tech</a>
        </div>
      </div>
    </div>
    <p class="d-grid gap-2 px-2 mt-2">
      <a class="btn btn-success" data-bs-toggle="collapse" href="#gestioninter" role="button" aria-expanded="false"
        aria-controls="collapseExample">
        Gestion Inters
      </a>
    </p>
    <div class="collapse px-2" id="gestioninter">
      <div class="card card-body">
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_recap')}}" class="btn btn-primary">Recap période</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_inter_new')}}" class="btn btn-primary">Nouvelle intervention</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('change_periode')}}" class="btn btn-primary">Changer Période</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('change_year')}}" class="btn btn-primary">Changer Année</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('inter_jour')}}" class="btn btn-primary">Inter du jour</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('insertion_inter_mois')}}" class="btn btn-primary"
            onclick="return confirm('Etes-vous sûr de vouloir inserer les interventions de la période séléctionnée?')">Insertion
            inter periode</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('suppression_inter_mois')}}" class="btn btn-danger"
            onclick="return confirm('Etes-vous sûr de vouloir supprimer les interventions de la période séléctionnée?')">Suppression
            inter periode</a>
        </div>
      </div>
    </div>
    <p class="d-grid gap-2 px-2">
      <a class="btn btn-success" data-bs-toggle="collapse" href="#facturation" role="button" aria-expanded="false"
        aria-controls="collapseExample">
        Facturations
      </a>
    </p>
    <div class="collapse px-2" id="facturation">
      <div class="card card-body">
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_facture_all')}}" class="btn btn-primary">Recap Factures</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_facture', {client: 'B2A'})}}" class="btn btn-primary">Factures B2A</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_facture', {client: 'HELP1FO'})}}" class="btn btn-primary">Factures Help1fo</a>
        </div>
        <div class="d-grid gap-2 px-2 mb-2">
          <a href="{{ path ('app_facture', {client: 'AUTRE'})}}" class="btn btn-primary">Factures AUTRES</a>
        </div>
      </div>
    </div>

  </div>
</div>

{% endblock %}
